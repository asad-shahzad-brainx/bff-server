<!DOCTYPE html>
<html lang="en">
<head>
    <base href="http://localhost:3000/">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quote PDF</title>
    <link rel="stylesheet" href="styles.css"> 
</head>
<body>
    <%- include('header') %> 
    <main>
      <%- include('customerDetails', { customer: input.contactInformation }) %>
      <% for (const [index, item] of input.cart.entries()) { %>
        <%- include('newLineItem', { item: item, index: index, lineItem: lineItems[index] }) %>
      <% } %>
      <%- include('warrantyLineItem', { lineItem: getWarrantyLineItem(lineItems) }) %>
      <%- include('shippingDetails') %>
      <%- include('totalPrice', { lineItems: lineItems }) %>
      <%- include('termsAndConditions', { terms: terms }) %>
    </main>
    <%- include('footer') %>
</body>
</html>